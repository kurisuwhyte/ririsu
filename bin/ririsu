%% =====================================================================
%% CLI
%% =====================================================================
main(["help"]) -> usage();
main(["version"]) -> io:format("ririsu 0.1.0");

main([Filename]) ->
    {ok, Data} = file:read_file(Filename),
    execute(unicode:characters_to_list(Data));

main([]) ->
    execute(slurp(standard_io)).


execute(Source) ->
    Dir = filename:dirname(escript:script_name()),
    true = code:add_pathz(Dir ++ "/../beam"),
    show(ririsu:run(Source)).

show(Term) ->
    io:format("~p", [Term]).

display(Msg) ->
    io:format(Msg).

slurp(File) ->
    Buffer = io:get_chars(File, '', 255),
    case Buffer of
        eof ->
            "";
        _ ->
            Buffer ++ slurp(File)
    end.


usage() ->
    display("ririsu --- The 2^6th most horrible language ever devised.\n"
         ++ "                                                         \n"
         ++ "Usage:                                                   \n"
         ++ "  ririsu help                                            \n"
         ++ "  ririsu version                                         \n"
         ++ "  ririsu <file.ri>                                       \n").
